@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject LCDE.Servicios.ISesionServicio SesionServicio
@{
    var url = "/Auth/Login";
    if (SignInManager.IsSignedIn(User))
    {
        var rol = SesionServicio.ObtenerRolUsuario();
        url = int.Parse(rol) == (int)LCDE.Models.Enums.Rol.Cliente ? "/Ecommerce/Home" : "/Ventas/Index";
    }
}
<div class="align-items-center h-100 d-flex w-50 mx-auto">
    <div class="mx-auto text-center">
        <h1 class="display-1 m-0 font-weight-bolder text-muted" style="font-size:80px;">404</h1>
        <h1 class="mb-1 text-muted font-weight-bold">OOPS!</h1>
        <h6 class="mb-3 text-muted">La página o el registro no existe</h6>
        <a href="@url" class="btn btn-lg btn-primary px-5">Ir al inicio</a>
    </div>
</div>
