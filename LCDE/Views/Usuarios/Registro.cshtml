@model UsuarioCrearDTO

@{
    ViewData["Title"] = "Registro";
}

<div class="container-fluid col-6">
    <div class="card shadow mb-4">
        <div class="card-header py-3 encabezado-card">
            <h6 class="m-0 font-weight-bold text-white">Crear cliente</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <h5>
                    Registre los datos del usuario
                </h5>

        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Nombre_usuario" class="form-label">Nombre de usuario</label>
                <input asp-for="Nombre_usuario" class="form-control" />
                <span asp-validation-for="Nombre_usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdRole" class="form-label">Tipo de Rol:</label>
                        <select asp-for="IdRole" asp-items="Model.Roles" class="form-select"></select>
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasennia" class="form-label">Contraseña</label>
                <input asp-for="Contrasennia" class="form-control" type="password"/>
                <span asp-validation-for="Contrasennia" class="text-danger"></span>
            </div>

            <button class="btn-primary btn">Regístrate</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

        </form>
    </div>
</div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}