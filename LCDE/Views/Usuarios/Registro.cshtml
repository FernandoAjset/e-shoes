@model UsuarioDTO

@{
    ViewData["Title"] = "Registro";
}

<h1>Regístrate</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Registro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Nombre_usuario" class="form-label">Nombre de usuario</label>
                <input asp-for="Nombre_usuario" class="form-control" />
                <span asp-validation-for="Nombre_usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdRole"></label>
                <select asp-for="IdRole" asp-items="Model.Roles"></select>
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasennia" class="form-label"></label>
                <input asp-for="Contrasennia" class="form-control" type="password"/>
                <span asp-validation-for="Contrasennia" class="text-danger"></span>
            </div>

            <button class="btn-primary btn">Regístrate</button>
            <a class="btn btn-success" asp-action="login">Deseo Loguearme</a>

        </form>
    </div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}