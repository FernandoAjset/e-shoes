@model dynamic;
@{
    ViewData["Title"] = "Reporte";
}
<style>
    .select2 {
        width: 100% !important;
    }
</style>
<!-- URL de acciones -->
<input type="hidden" id="ReporteVentasPorCategoria" value="@Url.Action("ReporteVentasPorCategoria", "Reportes")" />
<!-- Begin Page Content -->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 encabezado-card">
                            <h6 class="m-0 font-weight-bold text-white">Ventas filtradas por categoría</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="fecha">Fecha:</label>
                                    <input type="date" id="fecha" name="fecha" class="form-control" />
                                </div>

                                <div class="form-group ml-3">
                                    <label for="categoria">Categoría:</label>

                                    <select asp-items="Model.Categorias" class="form-select" id="categoria"></select>
                                </div>

                            </div>
                            <div class="col-sm-3 ml-0">
                                <button type="submit" class="btn btn-primary" id="buttonVentasDiariasPorCategoria">Enviar</button>
                            </div>
                            <div class="row mt-5">
                                <div class="col-sm-12">
                                    <table class="table table-sm" id="tbProducto">
                                        <thead>
                                            <tr class="encabezado-tabla">
                                                <th>Categoria</th>
                                                <th>Fecha</th>
                                                <th>Producto</th>
                                                <th>Unidades vendidas</th>
                                                <th>Total Vendido</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- /.container-fluid -->
@section Scripts {
    <script src="~/js/vistas/ventasPorCategoria.js">

    </script>
}